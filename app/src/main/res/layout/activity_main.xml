<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/wood"
        tools:layout_editor_absoluteX="-483dp"
        tools:layout_editor_absoluteY="-15dp" />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintGuide_percent="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:id="@+id/guia_horizontal_50"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintGuide_percent="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        android:id="@+id/guia_vertical_45"/>

    <ImageView
        android:id="@+id/image_file_center"
        android:layout_width="100dp"
        android:layout_height="94dp"
        android:src="@drawable/folder_blue"
        android:scaleType="fitCenter"

        app:layout_constraintTop_toBottomOf="@id/guia_horizontal_50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageButton
        android:id="@+id/button_red_plus"
        android:layout_width="90dp"
        android:layout_height="84dp"
        android:src="@drawable/folder_red_plus"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toBottomOf="@id/guia_horizontal_50"
        app:layout_constraintBottom_toBottomOf="@id/image_file_center"
        app:layout_constraintEnd_toStartOf="@id/image_file_center"
        android:layout_marginEnd="20dp"
        android:background="@android:color/transparent"/>

    <ImageButton
        android:id="@+id/button_yellow_plus"
        android:layout_width="90dp"
        android:layout_height="84dp"
        android:src="@drawable/folder_yellow_plus"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@id/image_file_center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp"
        android:background="@android:color/transparent"/>

    <ImageButton
        android:id="@+id/button_blue_plus"
        android:layout_width="90dp"
        android:layout_height="84dp"
        android:src="@drawable/folder_blue_plus"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toBottomOf="@id/guia_horizontal_50"
        app:layout_constraintBottom_toBottomOf="@id/image_file_center"
        app:layout_constraintStart_toEndOf="@id/image_file_center"
        android:layout_marginStart="20dp"
        android:background="@android:color/transparent"/>

    <ImageButton
        android:id="@+id/button_green_plus"
        android:layout_width="90dp"
        android:layout_height="84dp"
        android:src="@drawable/folder_green_plus"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toBottomOf="@id/image_file_center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"/>

    <ImageView
        android:id="@+id/image_cabinet_red"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="@id/guia_vertical_45"
        app:layout_constraintBottom_toTopOf="@id/button_yellow_plus"
        android:src="@drawable/file_cabinet_red"
        android:scaleType="fitCenter"
        android:layout_marginEnd="10dp" />


    <ImageView
        android:id="@+id/image_cabinet_blue"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toStartOf="@id/image_cabinet_red"
        app:layout_constraintBottom_toTopOf="@id/button_yellow_plus"
        android:src="@drawable/file_cabinet_blue"
        android:scaleType="fitCenter"
        android:layout_marginEnd="20dp"/>

    <ImageView
        android:id="@+id/image_cabinet_yellow"
        android:scaleType="fitCenter"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toEndOf="@id/guia_vertical_45"
        app:layout_constraintBottom_toTopOf="@id/button_yellow_plus"
        android:src="@drawable/file_cabinet_yellow"
        android:layout_marginStart="10dp"/>

    <ImageView
        android:id="@+id/image_cabinet_green"
        android:scaleType="fitCenter"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toEndOf="@id/image_cabinet_yellow"
        app:layout_constraintBottom_toTopOf="@id/button_yellow_plus"
        android:src="@drawable/file_cabinet_green"
        android:layout_marginStart="10dp"/>

    <ImageButton
        android:id="@+id/image_coffee_cup_s"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/settings_icon_coffee"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"
        android:background="@android:color/transparent"/>
    <View
        android:id="@+id/view_back_timer"
        android:layout_width="150dp"
        android:layout_height="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="15dp"
        android:background="@color/grey"/>

    <View
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@id/view_back_timer"
        app:layout_constraintEnd_toEndOf="@id/view_back_timer"
        app:layout_constraintStart_toStartOf="@id/view_back_timer"
        app:layout_constraintTop_toTopOf="@id/view_back_timer"
        android:layout_margin="15dp"
        android:background="@color/dark_grey"/>
    <TextView
        android:id="@+id/textViewTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/dark_grey"
        android:gravity="center_horizontal|center_vertical"
        android:text="5:00"
        android:textColor="#FF0000"
        android:textSize="50sp"
        android:textStyle="bold"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="@id/view_back_timer"
        app:layout_constraintEnd_toEndOf="@id/view_back_timer"
        app:layout_constraintStart_toStartOf="@id/view_back_timer"
        app:layout_constraintTop_toTopOf="@id/view_back_timer" />

    <Button
        android:id="@+id/button_menu"
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:layout_margin="15dp"
        android:layout_marginBottom="4dp"
        android:backgroundTint="@color/teal_900"
        android:background="@drawable/rounded_corners"
        android:backgroundTintMode="src_atop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/menu"
        android:textSize="30dp"/>

    <!--TODO: CREAR TEMPORIZADOR DE LUZ, POR AHORA ES SOLO UN STAND-IN-->

    <View
        android:layout_width="40dp"
        android:layout_height="250dp"
        app:layout_constraintBottom_toTopOf="@id/button_menu"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="15dp"
        android:layout_marginStart="30dp"
        android:background="@color/dark_grey"
        android:id="@+id/progressBarBackGround"/>
    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="30dp"
        android:layout_height="235dp"
        android:progressDrawable="@drawable/progress_bar_theme"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="@id/progressBarBackGround"
        app:layout_constraintBottom_toBottomOf="@id/progressBarBackGround"
        app:layout_constraintRight_toRightOf="@id/progressBarBackGround"
        app:layout_constraintLeft_toLeftOf="@id/progressBarBackGround"
        />
    <ImageView
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:src="@drawable/bulblight"
        app:layout_constraintBottom_toBottomOf="@id/progressBarBackGround"
        app:layout_constraintLeft_toLeftOf="@id/progressBar"
        app:layout_constraintRight_toRightOf="@id/progressBar"

        />
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/backgroundWhite"
        android:background="@color/white"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>