<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/wood" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guia_horizontal_50"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_percent="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guia_vertical_50"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_percent="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/image_file_center"
        android:layout_width="100dp"
        android:layout_height="94dp"
        android:scaleType="fitCenter"
        android:src="@drawable/folder_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guia_horizontal_50" />

    <ImageButton
        android:id="@+id/button_one"
        android:layout_width="90dp"
        android:layout_height="84dp"
        android:layout_marginEnd="20dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/folder_red_plus"
        app:layout_constraintBottom_toBottomOf="@id/image_file_center"
        app:layout_constraintEnd_toStartOf="@id/image_file_center"
        app:layout_constraintTop_toBottomOf="@id/guia_horizontal_50" />

    <ImageButton
        android:id="@+id/button_two"
        android:layout_width="90dp"
        android:layout_height="84dp"
        android:layout_marginBottom="20dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/folder_yellow_plus"
        app:layout_constraintBottom_toTopOf="@id/image_file_center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/button_three"
        android:layout_width="90dp"
        android:layout_height="84dp"
        android:layout_marginStart="20dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/folder_blue_plus"
        app:layout_constraintBottom_toBottomOf="@id/image_file_center"
        app:layout_constraintStart_toEndOf="@id/image_file_center"
        app:layout_constraintTop_toBottomOf="@id/guia_horizontal_50" />

    <ImageButton
        android:id="@+id/button_four"
        android:layout_width="90dp"
        android:layout_height="84dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/folder_green_plus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_file_center" />

    <ImageView
        android:id="@+id/image_cabinet_red"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/file_cabinet_red"
        app:layout_constraintBottom_toTopOf="@id/button_two"
        app:layout_constraintEnd_toEndOf="@id/guia_vertical_50" />


    <ImageView
        android:id="@+id/image_cabinet_blue"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/file_cabinet_blue"
        app:layout_constraintBottom_toTopOf="@id/button_two"
        app:layout_constraintEnd_toStartOf="@id/image_cabinet_red" />

    <ImageView
        android:id="@+id/image_cabinet_yellow"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/file_cabinet_yellow"
        app:layout_constraintBottom_toTopOf="@id/button_two"
        app:layout_constraintStart_toEndOf="@id/guia_vertical_50" />

    <ImageView
        android:id="@+id/image_cabinet_green"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/file_cabinet_green"
        app:layout_constraintBottom_toTopOf="@id/button_two"
        app:layout_constraintStart_toEndOf="@id/image_cabinet_yellow" />

    <ImageButton
        android:id="@+id/image_coffee_cup_s"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_margin="10dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/settings_icon_coffee"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_back_timer"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_margin="15dp"
        android:background="@color/grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:layout_margin="15dp"
        android:background="@color/dark_grey"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@id/view_back_timer"
        app:layout_constraintEnd_toEndOf="@id/view_back_timer"
        app:layout_constraintStart_toStartOf="@id/view_back_timer"
        app:layout_constraintTop_toTopOf="@id/view_back_timer" />

    <TextView
        android:id="@+id/textViewTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/dark_grey"
        android:gravity="center_horizontal|center_vertical"
        android:text="5:00"
        android:textColor="#FF0000"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/view_back_timer"
        app:layout_constraintEnd_toEndOf="@id/view_back_timer"
        app:layout_constraintStart_toStartOf="@id/view_back_timer"
        app:layout_constraintTop_toTopOf="@id/view_back_timer" />

    <Button
        android:id="@+id/button_menu"
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:layout_margin="15dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/rounded_corners"
        android:text="@string/menu"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/menu"
        android:textSize="30dp"/>

    <!--TODO: CREAR TEMPORIZADOR DE LUZ, POR AHORA ES SOLO UN STAND-IN-->

    <View
        android:id="@+id/progressBarBackGround"
        android:layout_width="25dp"
        android:layout_height="300dp"
        android:layout_margin="15dp"
        android:layout_marginStart="30dp"
        android:background="@color/dark_grey"
        app:layout_constraintBottom_toTopOf="@id/button_menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="15dp"
        android:layout_height="285dp"
        android:background="@color/white"
        android:progressDrawable="@drawable/progress_bar_theme"
        app:layout_constraintBottom_toBottomOf="@id/progressBarBackGround"
        app:layout_constraintLeft_toLeftOf="@id/progressBarBackGround"
        app:layout_constraintRight_toRightOf="@id/progressBarBackGround"
        app:layout_constraintLeft_toLeftOf="@id/progressBarBackGround"
        />
    <ImageView
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:src="@drawable/bulblight"
        app:layout_constraintBottom_toBottomOf="@id/progressBarBackGround"
        app:layout_constraintLeft_toLeftOf="@id/progressBar"
        app:layout_constraintRight_toRightOf="@id/progressBar"

        />
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/backgroundWhite"
        android:background="@color/white"
        android:visibility="gone"/>
        app:layout_constraintTop_toTopOf="@id/progressBarBackGround" />

    <TextView
        android:id="@+id/blue_score"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="40dp"
        android:text="null"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@id/image_cabinet_blue"
        app:layout_constraintLeft_toLeftOf="@id/image_cabinet_blue" />

    <TextView
        android:id="@+id/red_score"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="40dp"
        android:text="null"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@id/image_cabinet_red"
        app:layout_constraintLeft_toLeftOf="@id/image_cabinet_red" />

    <TextView
        android:id="@+id/yellow_score"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="40dp"
        android:text="null"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@id/image_cabinet_yellow"
        app:layout_constraintLeft_toLeftOf="@id/image_cabinet_yellow" />

    <TextView
        android:id="@+id/green_score"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="null"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@id/image_cabinet_green"
        app:layout_constraintLeft_toLeftOf="@id/image_cabinet_green"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="30dp"
        android:textColor="@color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>